<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="350dp"
        android:layout_height="500dp"
        android:layout_gravity="center"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:padding="5dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <com.example.carlicense.MyImageView
                android:id="@+id/license_plate_image"
                android:layout_width="wrap_content"
                android:layout_height="218dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_image" />

        <TextView
                android:id="@+id/license_plate_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:paddingLeft="50sp"
                android:paddingTop="20sp"
                android:text="车牌号："
                android:textColor="@color/colorGray"
                android:textSize="14sp"
                android:textStyle="bold" />

        <TextView
                android:id="@+id/car_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:paddingLeft="50sp"
                android:paddingTop="20sp"
                android:text="车类型："
                android:textColor="@color/colorGray"
                android:textSize="14sp"
                android:textStyle="bold" />

        <TextView
                android:id="@+id/now_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:paddingLeft="50sp"
                android:paddingTop="20sp"
                android:text="时    间："
                android:textColor="@color/colorGray"
                android:textSize="14sp"
                android:textStyle="bold" />
        <TextView
                android:id="@+id/pay_toll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:paddingLeft="50sp"
                android:paddingTop="20sp"
                android:text="费    用："
                android:textColor="@color/colorGray"
                android:textSize="14sp"
                android:textStyle="bold" />
    </LinearLayout>

    <Button
            android:id="@+id/ensure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20sp"
            android:background="@drawable/ensure_style"
            android:onClick="clickEnsure"
            android:text="确定"
            android:textColor="@color/colorGray" />

</LinearLayout>