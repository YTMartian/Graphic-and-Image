<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        >
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <com.example.carlicense.MyImageView
                android:id="@+id/history_license_plate_image"
                android:layout_width="wrap_content"
                android:layout_height="218dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_image" />

        <TextView
                android:id="@+id/history_license_plate_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:paddingLeft="50sp"
                android:paddingTop="20sp"
                android:text="车牌号："
                android:textColor="@color/colorGray"
                android:textSize="14sp"
                android:textStyle="bold" />

        <TextView
                android:id="@+id/history_car_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:paddingLeft="50sp"
                android:paddingTop="20sp"
                android:text="车类型："
                android:textColor="@color/colorGray"
                android:textSize="14sp"
                android:textStyle="bold" />

        <TextView
                android:id="@+id/history_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:paddingLeft="50sp"
                android:paddingTop="20sp"
                android:text="时    间："
                android:textColor="@color/colorGray"
                android:textSize="14sp"
                android:textStyle="bold" />
        <TextView
                android:id="@+id/history_pay_toll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:paddingLeft="50sp"
                android:paddingTop="20sp"
                android:text="费    用："
                android:textColor="@color/colorGray"
                android:textSize="14sp"
                android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>